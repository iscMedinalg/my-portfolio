---
const { link } = Astro.props
---
<a
    class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base cursor-pointer
          border rounded-lg focus:z-10 focus:ring-4 focus:outline-none
        text-black/80 dark:text-white bg-slate-200 dark:bg-indigo-900 border-gray-200 dark:border-gray-600
        hover:bg-slate-300 dark:hover:bg-indigo-700 hover:text-black/80 dark:hover:text-white  
        focus:ring-slate-100 dark:focus:ring-indigo-700"
>
    <!-- <slot name="icon-left"></slot> focus:text-blue-700 -->
    <slot></slot>
    <!-- <slot name="icon-right"></slot> -->
    <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
    >
        <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
        >
        </path>
    </svg>
</a>